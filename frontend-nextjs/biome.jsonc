{
	"$schema": "https://biomejs.dev/schemas/1.7.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noUnusedTemplateLiteral": "off",
				"noNonNullAssertion": "off",
				"useSelfClosingElements": "off"
			}
		}
	},
	"files": {
		"ignore": ["src/fakeDataForTesting/**"]
	},
	"formatter": {
		"ignore": ["test/fakeDataForTesting/**"]
	}
}
